<% if @comment.errors.any? %>
  <%= turbo_stream.replace "#{dom_id(@commentable)}_#{dom_id(Comment.new)}_form" do %>
    <%= render "users/comments/form", commentable: @commentable, comment: @comment, url: self.send("users_#{@commentable.class.to_s.underscore}_comments_path", @commentable) %>
  <% end %>
<% else %>
  <%= turbo_stream.replace "#{dom_id(@commentable)}_#{dom_id(Comment.new)}_form" do %>
    <%= render "users/comments/form", commentable: @commentable, comment: @commentable.comments.new, url: self.send("users_#{@commentable.class.to_s.underscore}_comments_path", @commentable) %>
  <% end %>
<% end %>
<%= render_turbo_stream_flash_messages %>
