<div id="<%= dom_id podcast_album %>">
    <div class="d-flex justify-content-between show_podcast_album">
        <button class="button_hidden_album" data-bs-toggle="modal" data-bs-target="#podcastAlbumModal" >
        <%= link_to edit_users_podcast_album_path(podcast_album), data:{turbo_frame: "modal_for_podcast_album"}, class: "button_show_podcast" do %>
                <div class="d-flex">
                    <div class="p-2">
                        <%= podcast_album.image? ? image_tag(podcast_album.image_url, class: "podcast_album_image") : image_tag("album_default.jpg", class: "podcast_album_image") %>
                    </div>
                    <div class="p-2 d-flex flex-column align-items-start">
                        <div class="album_name"><%= podcast_album.name%></div>
                        <div class="album_date"><%= podcast_album.created_at.strftime("%b %d, %Y")%></div>
                    </div>
                </div>
        <% end %>
        </button>
        <div class="ml-auto p-2 d-flex justify-content-around">
          <% if Like.where('likeable_type = ? and likeable_id = ? and user_id = ? ',podcast_album.class.to_s, podcast_album.id, current_user.id) %>
            <div><%= link_to '<i class="fa-solid fa-heart"></i>'.html_safe, users_podcast_album_like_path(podcast_album), method: :post %></div>
          <% else %>
            <div><%= link_to '<i class="fa-regular fa-heart"></i>'.html_safe, users_podcast_album_like_path(podcast_album), method: :post, style: 'color: red' %></div>
          <% end %>
          <div><i class="fa-regular fa-bookmark" ></i></div>
        </div>
    </div>
</div>
<hr>

