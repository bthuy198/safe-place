<%= turbo_frame_tag "main" do %>
  <div class="container-fluid show_podcast" >
    <div class="row">
        <div class="card card_index" >
          <div class="card-body body_index">
             <div class="row">
              <div class="col-4">
                <div class="card card_album">
                  <div class="card-body body_album">
                    <%= turbo_frame_tag "albums" do %>
                      <% @podcast_albums.each do |podcast_album| %>
                        <%= render "podcast_album", podcast_album: podcast_album%>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="col-8 d-flex flex-column justify-content-between">
                 <div class="d-flex flex-column align-items-center" >
                    <h2>Podcasts are not just voices; they are emotions and knowledge shared through sound. When you upload a podcast, you are sharing a part of yourself with the world.</h2>        
                  <button style="background-color: transparent; border: none;" class="button_hidden" data-bs-toggle="modal" data-bs-target="#new_podcast_modal">
                    <%= link_to "Create podcast",new_users_podcast_path, data:{turbo_frame: "modal_for_podcast"},class:"btn btn-primary button_create_podcast"%>
                  </button>
                  </div>
                  <%= turbo_frame_tag "recent_podcasts_frame", class:"row show_podcast_detail" do %>
                    <div class="scrolling-container">
                      <% @recent_podcasts.each do |recent_podcast| %>
                        <div class="col-3">
                          <%= render "podcast", podcast: recent_podcast %>
                        </div>
                      <% end %>
                    </div>
                  <% end%>
              </div>
             </div>
          </div>
        </div>
    </div>
  </div>
</div>
<%= render "users/podcasts/modal", podcast: Podcast.new%>
<% end %>






