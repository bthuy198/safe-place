
<div id="<%= dom_id podcast %>">
    <button class="button_hidden" data-bs-toggle="modal" data-bs-target="#new_podcast_modal" style="background-color: transparent; border: none;">
    <%= link_to edit_users_podcast_path(podcast), data:{turbo_frame: "modal_for_podcast"}, class: "button_show_podcast" do %>
        <div class="card item">
            <div class="card-body d-flex flex-column justify-content-center">
                    <%= image_tag podcast.image_url,  class: "podcast_image" if podcast.image?  %>
                    <div class="podcast_name"><%=podcast.name%></div>
                    <div class="podcast_author"><%=podcast.author_name%></div>
                <div class="album_name"><%=podcast.podcast_album.name%></div>
            </div>
        </div>
    <% end %>
    </button>
</div>






