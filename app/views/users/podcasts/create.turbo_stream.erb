<% if @podcast.errors.any? %>
  <%= turbo_stream.replace "#{dom_id(@podcast)}_form" do %>
    <%= render "users/podcasts/form", podcast: @podcast %>
  <% end %>
<% else %>
    <%= turbo_stream.append 'recent_podcasts_frame' do  %>
        <%= render partial: 'podcast', locals: { podcast: @podcast }%>
        <script>
            $("#new_podcast_modal").modal("hide")
        </script>
    <% end %>
<% end %>

<%= render_turbo_stream_flash_messages %>

