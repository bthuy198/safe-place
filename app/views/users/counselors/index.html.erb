<div class="container-fluid custom_body">
  <div class="row custom_render_row">
    <div class="col-md-3 custom_board">
      <div class="custom_menu">
        <ul>
          <li><a href=<%= root_path %>><i class="fa-solid fa-house fa-lg"></i>Home</a></li>
          <li><a href=#><i class="fa-solid fa-magnifying-glass fa-lg"></i>Search</a></li>
          <li><a href=#><i class="fa-solid fa-book fa-lg"></i>My courses</a><a href=#><i class="fa-solid fa-plus"></i></a></li>
        </ul>
      </div>
      <%#= turbo_frame_tag "new_confession_frame", src: new_users_confession_path, loading: :lazy do %>
        <%# <div class="centered_container centered_confession_frame">
          <i class="fa-solid fa-spinner fa-spin-pulse fa-2xl"></i>
        </div> %>
      <%# end %>
      <%#= turbo_frame_tag "board", src: users_confessions_path, loading: :lazy do %>
        <%# <div class="centered_container centered_board">
          <i class="fa-solid fa-spinner fa-spin-pulse fa-2xl"></i>
        </div> %>
      <%# end %>
    </div>
    <div class="col-md-9 custom_main">
      <%= render "users/shared/navbar" %>
      <%# <div class="centered_container centered_main"> %>
        <div class="container-fluid show_podcast" >
          <h1>List counselor</h1>
          <div class="card">
            <div class="card-body ">
              <%= search_form_for @q, url:users_counselors_path, class: 'd-flex justify-content-center' do |f| %>
                <div class="input-group mb-3 input_search_room">
                  <%= f.search_field :user_name_cont, class: 'form-control me-2', placeholder: 'Search name' %>
                  <%= f.submit 'Search', class: 'btn btn-outline-primary room_btn_search ', type: 'submit' %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="d-flex justify-content-center">
            <div id="room_menu_join" class="all_room_join">
              <div class="mini_menu d-grid">
                <% @counselors.each do |counselor| %>
                  <div class="item_room_join">
                    <div class="item_join" id="button_join_<%= counselor.id %>">
                      <i class="fa-solid fa-user"></i>
                      <label> <%= counselor.user_name%></label>
                        <%= link_to 'join', join_counseler_room_users_counselor_path(counselor), method: :patch, class: 'btn btn-primary btn_join join_counselor_button custom_link_to' %>
                    </div>
                  </div>
                <% end %>
                
            </div>
                <div class="d-flex justify-content-center", id="paginate-element" >
                  <%= paginate @counselors, theme: 'bootstrap-5' %>
                </div> 
            </div>

          </div>
        </div>
      </div>
  </div>
</div>
</div>
</div> 

