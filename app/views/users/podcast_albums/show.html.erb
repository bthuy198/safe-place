
<%= turbo_frame_tag "show_list_podcast" do %>
    <div class="show_list_podcast_from_album">
        <% if @podcasts.empty? %>
        <div class="modal-body">
            <div class="text-center">
                No podcast available
            </div>
        </div>
        <% else %>
            <% @podcasts.each do |podcast| %>
                <%= render "users/podcast_albums/podcast", podcast: podcast%>
            <% end %>
        <% end %>
    </div>
    
<% end %>


