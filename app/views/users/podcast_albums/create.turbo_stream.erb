<% if @podcast_album.errors.any? %>
  <%= render_turbo_stream_flash_messages %>
<% else %>
    <%= turbo_stream.append 'albums' do %>
        <%= render partial: 'users/podcasts/podcast_album', locals: { podcast_album: @podcast_album }%>
        <script>
                $("#podcastAlbumModal").modal("hide")
        </script>
    <% end %>
<% end %>
