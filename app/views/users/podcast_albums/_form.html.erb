
<div class="container-fluid" style="margin-top: 5%;">
    <%= form_for @podcast_album, url: users_podcast_albums_path do |f| %>
            <div class="d-flex justify-content-between align-items-center">
                <%= f.label :name, class:" label user_info__label" %>
                <%= f.text_field :name, class:" form-control user_info__text", style: "margin: 5px 25px;" %>
                <%= f.submit "Add", class:"btn ", style:"background-color: #1F7564; color: #fff; width: 200px"%>
            </div>
    <% end %>
</div>
