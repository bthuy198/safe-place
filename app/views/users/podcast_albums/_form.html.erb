
<div class="container-fluid podcast_album_form">
    <%= form_for @podcast_album, url: users_podcast_albums_path do |f| %>
        <div class="row mb-4 align-items-center">
            <%= f.label :name, class:"col-3 label form_podcast_label" %>
                <%= f.text_field :name, class:"col form-control form_podcast_textfield"%>
            </div>
            <div class="row mb-4 align-items-center">
                <%= f.label :image, class:"col-3 label form_podcast_label" %>
                <%= f.file_field :image, class:"col form-control form_podcast_textfield"%>
            </div>
            <center>
                <%= f.submit "Add", class:"btn button_add"%>
            </center>
        <% end %>
</div>
