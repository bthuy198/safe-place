<% if @room.nil? %>
    <div class="d-flex align-items-center justify-content-center vh-100">
            <div class="text-center">
                <h1 class="display-1 fw-bold">404</h1>
                <p class="fs-3"> <span class="text-danger">Opps!</span> Page not found.</p>
                <%= link_to 'Go home ', root_path, class: 'btn btn-primary'  %>
            </div>
    </div>
<% else %>
<%= link_to root_path do %>
  <i class="fa-solid fa-angle-left button_back_user_info"></i>
<% end %>
    <div class="d-flex justify-content-center align-items-center">
        <div class="out_room_page">
            <h1><strong>Room: <%= @room.name%></strong></h1>
        </div>
            <div class="box_chat_room" >
                <div class="card">
                    <div class="card-body">
                        <%= turbo_stream_from dom_id(@room) %>
                        <%= turbo_stream_from current_user&.to_gid_param %>
                        <%= render "users/rooms/partials/room", room: @room %>
                    </div>
                </div>
            </div>
    </div>
<% end %>

