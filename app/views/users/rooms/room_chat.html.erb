                        <h4 class="card-title"><strong>Chat</strong></h4>
                    </div>

                    <%=turbo_stream_from "chatbox" %>
                    <div id="list-conversation">
                        <% @room.conversations.each do |conversation| %>
                            <%= render "users/rooms/partials/conversation", conversation: conversation%>
                        <% end %>
                    </div>
                    <%= form_with(model: [@room, Conversation.new], url: create_conversation_users_room_path(@room)) do |form| %>
                            <%= form.rich_text_area :content %>
                            <%= form.submit%>
                    <% end %>

                    
