
<div class="container-fluid" style="margin-top: 2rem;" >
  <div class = "row justify-content-center">
    <div class="col-lg-8">
        <h1 style ="color: #1F7564; font-size: 50; font-weight: bold;">Account Overview</h1>
        <h2 style ="color: #1F7564; font-size: 20; font-weight: bold; margin-top: 10px;">Profile</h2>
        <div class="card mb-4 user_info__card">
          <div class="card-body user_info__body">
            <div class="row">
              <div class="col-sm-7">
                <p class="text-muted mb-0 user_info__label">Username</p>
              </div>
              <div class="col-sm-5">
                <p class="mb-0"><%= @user.user_name%></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="text-muted col-sm-7">
                <p class="mb-0 user_info__label">Email</p>
              </div>
              <div class="col-sm-5">
                <p class="mb-0"><%= @user.email%></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-7">
                <p class="text-muted mb-0 user_info__label">Phone number</p>
              </div>
              <div class="col-sm-5">
                <p class="mb-0"><%= @user.phone_number%></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-7">
                <p class="text-muted mb-0 user_info__label">Gender</p>
              </div>
              <div class="col-sm-5">
                <p class="mb-0"><%= @user_info ? @user_info.gender : "" %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-7">
                <p class="text-muted mb-0 user_info__label">Date of birth</p>
              </div>
              <div class="col-sm-5">
                <p class="mb-0"><%= @user_info ? @user_info.date_of_birth : "" %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-7">
                <p class="text-muted mb-0 user_info__label">Province</p>
              </div>
              <div class="col-sm-5">
                <p class="mb-0"><%= @user_info ? @user_info.address : "" %></p>
              </div>
            </div>
            <hr>
          </div>
        </div>
        <%= link_to "Edit profile", edit_users_user_infos_path, class:"btn btn-outline-secondary btn-edit"%>
        <h2 style ="color: #1F7564; font-size: 20; font-weight: bold; margin-top: 25px;">Support</h2>
        <div class="row align-items-center" style="color: 1F7564;">
            <button type="button" class="btn btn__send-request">
                <div class="row justify-content-between">
                    <div class="col-2">Send a question</div>
                    <div class="col-1">Send</div>
                </div>
            </button>
        </div>
        <div class="row align-items-center" >
            <button type="button" class="btn btn__customer-care">
                <div class="row justify-content-between">
                    <div class="col-2">Customer are call center</div>
                    <div class="col-1">Person</div>
                </div>
            </button>
        </div>
        <h2 style ="color: #1F7564; font-size: 20; font-weight: bold; margin-top: 25px;">Q&A</h2>
        <div class="row align-items-center">
            <img src="https://media.istockphoto.com/id/1427522856/vi/anh/ng%C6%B0-d%C3%A2n-%E1%BB%9F-%C4%91%E1%BA%A7m-l%E1%BA%ADp-an.jpg?s=1024x1024&w=is&k=20&c=KueMkMQcWJsLfcjP8ngH1ebN8VefmobgxJ9jrsHwheU=" width="783px" height="181px">
        </div>
        <center>
            <%= link_to "Log out",destroy_user_session_path, class:"btn btn-outline-secondary btn__log-out", data: {turbo_method: :delete} %>
        </center>
  </div>
</div>


