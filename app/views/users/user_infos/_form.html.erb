
<div class="container-fluid edit_user_infos_container">
  <div class = "row justify-content-center">
    <div class="col-md-5">
      <%= form_for @user, url: users_user_infos_path, method: :patch do |f| %>
            <div class="card" >
                <div class="card-body">
                    <div class="row mb-4 align-items-center">
                        <%= f.label :user_name, class:"col-3 form_user_infos_label " %>
                        <%= f.text_field :user_name, class:"col form-control form_user_infos_textfield" %>
                    </div>
                    <div class="row mb-4 align-items-center ">
                        <%= f.label :email, class:"col-3 label form_user_infos_label" %>
                        <%= f.email_field :email, class:"col form-control form_user_infos_textfield" %>
                    </div>
                    <div class="row mb-4 align-items-center ">
                        <%= f.label :phone_number, class:"col-3 label form_user_infos_label" %>
                        <%= f.text_field :phone_number, class:"col form-control form_user_infos_textfield" %>
                    </div>
                    <%= f.fields_for :user_info do |uif| %>
                      <div class="row mb-4 align-items-center">
                        <%= uif.label :gender, class:"col-3 label form_user_infos_label" %>
                        <%= uif.select :gender, UserInfo.genders.keys, { }, { class: "col form-control form_user_infos_textfield" } %>
                      </div>
                      <div class="row mb-4 align-items-center">
                        <%= uif.label :date_of_birth, class:"col-3 label form_user_infos_label" %>
                        <%= uif.date_field :date_of_birth, class: "col form-control form_user_infos_textfield" %>
                      </div>
                      <div class="row mb-4 align-items-center">
                        <%= uif.label :address, class:"col-3 form_user_infos_label" %>
                        <%= uif.text_field :address, class: "col form-control form_user_infos_textfield" %>
                      </div>
                    <% end %>
                </div>
                
            </div>
            <div class="row">
              <%= f.submit "Update", class:"col btn button_edit"%>
            </div>
      <% end %>
    </div>
  </div>
</div>
