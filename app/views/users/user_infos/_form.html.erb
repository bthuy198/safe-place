
<div class="container-fluid">
  <div class = "row justify-content-center">
    <div class="col-md-4">
      <%= form_for @user, url: users_user_infos_path, method: :patch do |f| %>
            <div class="card edit_user__card" >
                <div class="card-body">
                    <div class="row mb-4 align-items-center">
                        <%= f.label :user_name, class:"col-3 label" %>
                        <%= f.text_field :user_name, class:"col form-control" %>
                    </div>
                    <div class="row mb-4 align-items-center">
                        <%= f.label :email, class:"col-3 label" %>
                        <%= f.email_field :email, class:"col form-control" %>
                    </div>
                    <div class="row mb-4 align-items-center">
                        <%= f.label :phone_number, class:"col-3 label" %>
                        <%= f.text_field :phone_number, class:"col form-control" %>
                    </div>
                    <%= f.fields_for :user_info do |uif| %>
                      <div class="row mb-4 align-items-center">
                        <%= uif.label :gender, class:"col-3 label" %>
                        <%= uif.select :gender, UserInfo.genders.keys, { }, { class: "col form-control" } %>
                      </div>
                      <div class="row mb-4 align-items-center">
                        <%= uif.label :date_of_birth, class:"col-3 label" %>
                        <%= uif.date_field :date_of_birth, class: "col form-control" %>
                      </div>
                      <div class="row mb-4 align-items-center">
                        <%= uif.label :address, class:"col-3 label" %>
                        <%= uif.text_field :address, class: "col form-control" %>
                      </div>
                    <% end %>
                </div>
                
            </div>
            <div class="row align-items-center">
                <%= f.submit "Update", class:"btn", style:"background-color: #1F7564; color: #fff; border: 2px solid #1F7564;"%>
            </div>
    <% end %>
        
    </div>
  </div>
</div>
