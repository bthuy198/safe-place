<% podcast_albums.each do |album| %>
  <%# binding.pry %>
  <tr id="album-<%= album.id %>">
    <td><%= album.id %></td>
    <td>Avatar</td>
    <td><%= album.name %></td>
    <td><%= album.user.user_name %></td>
    <td><%= link_to "Edit", edit_admins_podcast_album_path(album), remote: true, class: 'button_hover btn btn-primary bg_green border_green update_class' %></td>
    <td><%= link_to 'Destroy', admins_podcast_album_path(album), method: :delete, data: { confirm: "Destroy album '#{album.name}'?" }, remote: :true, class: "destroy_class btn btn-danger" %></td>
  </tr>
<% end %>