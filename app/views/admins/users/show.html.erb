<div class="container-fluid" >
  <div style="height: 100vh" class = "row justify-content-center">
    <div class="col-lg-8">
      <h1 style ="color: #1F7564; font-size: 50; font-weight: bold;">Account Overview</h1>
      <h2 style ="color: #1F7564; font-size: 20; font-weight: bold; margin-top: 10px;">Profile</h2>
      <div class="card mb-4 user_info__card">
        <div class="card-body user_info__body">
          <div class="row">
            <div class="col-sm-7">
              <p class="text-muted mb-0 user_info__label">Profile Name</p>
            </div>
            <div class="col-sm-5">
              <p class="mb-0"><%= @user_info ? @user_info.profile_name : "" %></p>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-7">
              <p class="text-muted mb-0 user_info__label">Username</p>
            </div>
            <div class="col-sm-5">
              <p class="mb-0"><%= @user.user_name%></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="text-muted col-sm-7">
              <p class="mb-0 user_info__label">Email</p>
            </div>
            <div class="col-sm-5">
              <p class="mb-0"><%= @user.email%></p>
            </div>
          </div>
          <div class="row">
            <div class="text-muted col-sm-7">
              <p class="mb-0 user_info__label">Status</p>
            </div>
            <div class="col-sm-5">
              <p class="mb-0"><%= @user.status%></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-7">
              <p class="text-muted mb-0 user_info__label">Phone number</p>
            </div>
            <div class="col-sm-5">
              <p class="mb-0"><%= @user.phone_number%></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-7">
              <p class="text-muted mb-0 user_info__label">Date of birth</p>
            </div>
            <div class="col-sm-5">
              <p class="mb-0"><%= @user_info ? @user_info.date_of_birth : "" %></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-7">
              <p class="text-muted mb-0 user_info__label">Province</p>
            </div>
            <div class="col-sm-5">
              <p class="mb-0"><%= @user_info ? @user_info.address : "" %></p>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-7">
              <p class="text-muted mb-0 user_info__label">Province</p>
            </div>
            <div class="col-sm-5">
              <p class="mb-0"><%= @user_info ? @user_info.address : "" %></p>
            </div>
          </div>
          <hr>
        </div>
      </div>
      <%= link_to "Edit profile", edit_admins_user_path(@user), class:"btn btn-outline-secondary btn-edit"%>
    </div>
  </div>
</div>
