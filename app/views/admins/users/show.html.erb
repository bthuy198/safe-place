<div style="height: 100vh" class = "row justify-content-center mt-3 profile-card ">
  <div class="col">
    <div class="card">
      <div class="card_title_with_chevron" style="display: flex; flex-direction: row; align-items: center;">
        <a href="#" onclick="moveBackward()"><i class="fa-solid fa-chevron-left"></i></a>
        <h1 class="text-center" >User Profile</h1>
      </div>
      <div class="row justify-content-center card-body">
        <div style = "width: 95%" >
          <div class="row">
            <div class="col-sm-6">
              <p class="text-muted mb-0">Profile Name</p>
            </div>
            <div class="col-sm-6">
              <p class="mb-0"><%= @user.user_info ? @user.user_info.profile_name : "" %></p>
            </div>
            <hr>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <p class="text-muted mb-0">Username</p>
            </div>
            <div class="col-sm-6">
              <p class="mb-0"><%= @user.user_name%></p>
            </div>
            <hr>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <p class="text-muted mb-0">Email</p>
            </div>
            <div class="col-sm-6">
              <p class="mb-0"><%= @user.email%></p>
            </div>
            <hr>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <p class="text-muted mb-0">Status</p>
            </div>
            <div class="col-sm-6">
              <p class="mb-0"><%= @user.status%></p>
            </div>
            <hr>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <p class="text-muted mb-0">Phone number</p>
            </div>
            <div class="col-sm-6">
              <p class="mb-0"><%= @user.phone_number%></p>
            </div>
            <hr>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <p class="text-muted mb-0">Date of birth</p>
            </div>
            <div class="col-sm-6">
              <p class="mb-0"><%= @user.user_info ? @user.user_info.date_of_birth : "" %></p>
            </div>
            <hr>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <p class="text-muted mb-0">Province</p>
            </div>
            <div class="col-sm-6">
              <p class="mb-0"><%= @user.user_info ? @user.user_info.address : "" %></p>
            </div>
            <hr>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <p class="text-muted mb-0">Gender</p>
            </div>
            <div class="col-sm-6">
              <p class="mb-0"><%= @user.user_info ? @user.user_info.gender : "" %></p>
            </div>
            <hr>
          </div>
          <br>
          <%= link_to "Edit profile", edit_admins_user_path(@user), class:"btn btn-outline-secondary btn-edit"%>
        </div>
      </div>
    </div>
  </div>
</div>
